<!DOCTYPE tiles-definitions PUBLIC
            "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
            "http://struts.apache.org/dtds/tiles-config_1_3.dtd">
<tiles-definitions>

    <!-- 画面レイアウト -->
    <!-- =================================================================== -->

    <!-- メイン画面 -->
    <definition name=".tiles.layout.main" path="/WEB-INF/jsp/eca0027/core/base.jsp" controllerClass="com.globaldenso.eca0027.core.common.controller.Eca0027HeaderController">
        <put name="topFlg" value="false"/>
        <put name="subScreenFlg" value="false"/>
        <put name="systemName" value="GSCM"/>
        <put name="systemId" value="ECA0027"/>
        <put name="menu" value="/WEB-INF/jsp/gscm/framework/menu.jsp?topFlg=false" /> 
        <put name="header" value="/WEB-INF/jsp/eca0027/core/header.jsp" />
        <put name="message" value="/WEB-INF/jsp/gscm/framework/message.jsp" />
        <put name="message_area_height" value="20"/>
        <put name="css_prefix" value=""/>
        <put name="js_filepath" value=""/>
        <put name="windowCloseFlg" value="true"/>
        <put name="popupFlg" value="false" />
    </definition>
    
    <!-- トップ画面 -->
    <definition name=".tiles.layout.top" path="/WEB-INF/jsp/eca0027/core/base.jsp" controllerClass="com.globaldenso.eca0027.core.common.controller.Eca0027HeaderController">
        <put name="topFlg" value="true"/>
        <put name="subScreenFlg" value="false"/>
        <put name="systemName" value="GSCM"/>
        <put name="systemId" value="ECA0027"/>
        <put name="menu" value="/WEB-INF/jsp/gscm/framework/menu.jsp?topFlg=true" /> 
        <put name="header" value="/WEB-INF/jsp/eca0027/core/header.jsp" />
        <put name="message" value="/WEB-INF/jsp/gscm/framework/message.jsp" />
        <put name="message_area_height" value="20"/>
        <put name="css_prefix" value=""/>
        <put name="js_filepath" value=""/>
        <put name="windowCloseFlg" value="false"/>
        <put name="popupFlg" value="false" />
    </definition>
    
    <!-- 補助画面 -->
    <definition name=".tiles.layout.popup" extends=".tiles.layout.main">
        <put name="topFlg" value="false"/>
        <put name="subScreenFlg" value="true"/>
        <put name="header" value="" />
        <put name="css_prefix" value="css/eca0027/core/ECA0027_common_en_US"/>
        <put name="js_filepath" value="js/eca0027/core/eca0027_common.js"/>
        <put name="windowCloseFlg" value="false"/>
        <put name="menu" value="" />
        <put name="popupFlg" value="true" />
    </definition>
</tiles-definitions>